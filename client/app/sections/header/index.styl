.header
	position relative

	.section__bg
		z-index 1
		width 100%
		height auto
		min-height 330px
		margin-top -50px
		background-image url(../resources/img/header/bg.png)
		@media all and (min-width: $phone)
			min-height 490px
		@media all and (min-width: $desktop)
			min-height 740px

	.top-panel
		position relative
		top 0
		left 0
		z-index 10
		width 100%
		height auto
		min-height 120px
		@extend .flex, .cover
		background-image url(../resources/img/header/top-panel.png)

	.logo
		width 123px
		height 81px
		@extend .cover
		background-image url(../resources/img/header/logo.png)