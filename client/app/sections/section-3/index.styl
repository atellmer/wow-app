.section--3

	.top-panel
		position absolute
		margin-top -90px
		width 100%
		height auto
		min-height 96px
		z-index 0
		@extend .cover
		background-image url(../resources/img/section-3/top-panel.png)


	.section__bg

		&--1
			padding-top 66px
			min-height 835px
			@media all and (min-width: $phone)
				background-image url(../resources/img/section-3/bg-1.png)	
		&--2
			min-height 720px
			@media all and (min-width: $phone)
				background-image url(../resources/img/section-3/bg-2.png)	


	.section__title
		@media all and (min-width: $phone)
			font-size 4rem

	.wow-cards
		@extend .flex
		margin-bottom 40px
		@media all and (min-width: $desktop)
			justify-content space-between

		&__item
			width 100%
			height auto
			min-height 500px
			background-color #000
			margin 5px
			border 1px solid #465703
			@media all and (min-width: $phone)
				width 340px
				min-height 500px

		&__bg
			width calc(100% + 7px)
			height auto
			min-height 255px
			margin -2px -6px 0 -6px
			@extend .flex, .cover
			align-items flex-end

			&--1
				background-image url(../resources/img/section-3/card-1.png)
			&--2
				background-image url(../resources/img/section-3/card-2.png)
			&--3
				background-image url(../resources/img/section-3/card-3.png)


		&__title
			font-size 2rem
			text-transform uppercase
			text-align center
			margin 10px 0 15px 0
			color $p-color
			text-shadow 0 0 24px #b4ff00
			@supports(-webkit-background-clip: text)
				background linear-gradient(#ccff00, #00C853)
				-webkit-background-clip text
				color transparent
			@media all and (min-width: $phone)
				font-size 3rem

		&__sign
			text-align center
			margin-top 16px
			font-size 1.6rem
			font-family 'LatoLatinWebLight'

			span
				color #9aea00


		&__list
			list-style none
			font-size 1.8rem
			font-family 'LatoLatinWebLight'
			margin-top 10px

		&__list-item
			&::before
				content ''
				position relative
				display inline-block
				width 8px
				height 8px
				background-color #b9ff00
				border-radius 50%
				margin-right 16px
				margin-bottom 2px
				box-shadow 0 0 6px #b4ff00

	.border-middle
		position absolute
		margin-top -84px
		left 0
		width 100%
		height auto
		min-height 96px
		z-index 0
		@extend .cover
		background-image url(../resources/img/section-3/border-middle.png)


	.l-btn
		@extend .flex
		margin-top 20px


	.wow-cards__item.js-is-selected
		box-shadow 0 0 64px #11580c


	.col-lg-4--ovveride
		@media all and (min-width: 1200px)
			width 32%

	.col-lg-8--ovveride
		@media all and (min-width: 1200px)
			width 68%

	.l-pagination
		@extend .flex
		
